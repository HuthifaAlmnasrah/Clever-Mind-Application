<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:textColorHint="@color/black"
                android:drawableEnd="@drawable/drawable_end"
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fileds_background"
                android:drawableStart="@drawable/ldpi_2"
                android:fontFamily="@font/brosh_k"
                android:gravity="center"
                android:hint="@string/user_name"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@+id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:textColorHint="@color/black"
                android:drawableEnd="@drawable/drawable_end"
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/fileds_background"
                android:drawableStart="@drawable/ldpi_3"
                android:fontFamily="@font/brosh_k"
                android:gravity="center"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="@+id/email"
                app:layout_constraintStart_toStartOf="@+id/email"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <ImageView
                android:id="@+id/clecer_mind_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/clever_mind_pob_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/login"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/login"
                app:layout_constraintTop_toBottomOf="@+id/signup"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/brosh_k"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/dont_have_account"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/forget_password"
                app:layout_constraintStart_toStartOf="@+id/forget_password"
                app:layout_constraintTop_toBottomOf="@+id/forget_password" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/brosh_k"
                android:gravity="center"
                android:text="@string/signup"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/txt"
                app:layout_constraintStart_toStartOf="@+id/txt"
                app:layout_constraintTop_toBottomOf="@+id/txt" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/brosh_k"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/forgetpassword"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/password"
                app:layout_constraintStart_toStartOf="@+id/password"
                app:layout_constraintTop_toBottomOf="@+id/password" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="702dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="285dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>